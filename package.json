{
  "name": "tailwind-app",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "tailwindcss": "^3.4.13"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:css dev:js",
    "dev:css": "tailwindcss -i ./public/css/application.css -o ./public/css/application.min.css --watch",
    "dev:js": "esbuild app/javascript/application.js --bundle --outdir=public/js --format=esm --sourcemap --watch",
    "build": "npm-run-all build:css build:js",
    "build:css": "tailwindcss -i ./public/css/application.css -o ./public/css/application.min.css --minify",
    "build:js": "esbuild app/javascript/application.js --bundle --outdir=public/js --format=esm --minify",
    "test": "bundle exec rspec"
  }
}
